      <h4>New Blog</h4>
      <form action = "/blogsoftware" method = "POST">
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Blog Title</label>
          <!-- Input -->
          <input name = "title" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" required>
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">Author</label>
          <!-- Input -->
          <input name = "author"type="text" class="form-control" id="exampleInputPassword1" required>
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">Snippet</label>
          <!-- Input -->
          <input name = "snippet"type="text" class="form-control" id="exampleInputPassword1" >
        </div>
        <div class="mb-3">
          <label id = "blog-lable" for="floatingTextarea">Blog:</label>
          <div class="form-floating">
            <!-- textarea -->
            <textarea name = "body" class="form-control" placeholder="Leave a comment here" id="floatingTextarea" required></textarea>
          </div>
          </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>



